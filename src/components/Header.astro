---
import { Icon } from "astro-icon/components";
import ThemeToggle from "./ThemeToggle.astro";
const { isBlog } = Astro.props;

const linksNav = [
  {
    nameLink: "Experiment",
    link: "/experiment/",
  },
];
---

<header class="mx-2 mt-8 flex items-center justify-between lg:mx-4">
  <a href="/" class="flex flex-1">
    <div class="cont_logo flex items-center">
      <Icon name="caffeine" class="text-foreground" />
      <div class="flex h-8 items-start">
        <Icon name="asterisk-icon" class="asterisk" />
      </div>
    </div>
  </a>

  <nav class="hidden md:flex md:flex-1 md:items-end md:justify-center">
    <ul class="flex gap-8">
      {
        linksNav.map((el) => (
          <li>
            <a
              href={el.link}
              class="text-link hover:text-foreground text-sm font-medium"
            >
              {el.nameLink}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>

  <div class="ml-2 flex justify-end md:ml-0 md:flex-1">
    <ThemeToggle />
  </div>
</header>
