---
import { Icon } from "astro-icon/components";
const { title, icon } = Astro.props;
---

<div class="flex justify-end first:mt-20 [&:not(:first-child)]:mt-48">
  <h2
    class="text-clamp_from-32_to-128 pb-2 text-right capitalize text-foreground"
  >
    {title}
  </h2>
  <Icon name={icon} class="h-4 w-4 md:h-8 md:w-8" />
</div>

