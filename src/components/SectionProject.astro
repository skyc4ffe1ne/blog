---
import { Icon } from "astro-icon/components";
const projects = [
  {
    title: "Color To Palette",
    stack: [
      {
        labelName: "React",
        iconName: "react-icon",
      },
    ],
    description: "A web app that make you to create a palette from an image",

    primaryImg: "/images/color-to-palette_primary.png",
    secondaryImg: "/images/color-to-palette_secondary.png",
    tertiaryImg: "/images/color-to-palette_tertiary.png",
    altImg:
      "showing the app interface where a color palette is generated from an uploaded image",
    link: "https://skyc4ffe1ne.github.io/image-to-colors.github.io/",
  },
  {
    title: "Requiz",
    stack: [
      {
        labelName: "React",
        iconName: "react-icon",
      },
      {
        labelName: "Next.js",
        iconName: "nextjs-icon",
      },
    ],
    description: "A web app that make you to create a personal quiz",
    primaryImg: "...",
    secondaryImg: "...",
    tertiaryImg: "...",
    link: "https://github.com/skyc4ffe1ne/re-quiz",
  },
];
---

<section
  class="mt-20 flex w-full flex-col items-center justify-center sm:mt-40"
>
  {
    projects.map((project) => (
      <div class="flex items-center gap-24 not-first:mt-10">
        <div class="w-xs">
          <h3 class="text-4xl font-medium tracking-tight text-pretty">
            {project.title}
          </h3>
          <div class="flex gap-4 pt-1">
            {project.stack.map((st) => (
              <div class="flex items-center gap-2">
                <Icon name={st.iconName} class="size-4" />
                <span class=""> {st.labelName} </span>
              </div>
            ))}
          </div>
          <p class="pt-5 pb-8 text-xl/6 tracking-tight text-pretty text-gray-700">
            {project.description}
          </p>

          <a
            href={project.link}
            class="flex items-center gap-2 text-blue-400"
            target="_blank"
          >
            See it live
            <Icon name="arrow_link-icon" />
          </a>
        </div>

        <div class="grid grid-cols-[repeat(3,_minmax(200px,400px))] gap-x-12">
          <div class="rounded-lg">
            <img
              src={project.primaryImg}
              alt="color to palette img"
              class="rounded-lg"
            />
          </div>

          <div class="rounded-lg">
            <img
              src={project.secondaryImg}
              alt="color to palette img"
              class="rounded-lg"
            />
          </div>
          <div class="rounded-lg">
            <img
              src={project.tertiaryImg}
              alt="color to palette img"
              class="rounded-lg"
            />
          </div>
        </div>
      </div>
    ))
  }
</section>

