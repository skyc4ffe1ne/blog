const allExperiment = [
  {
    name: "Maze",
    description:
      "Uses something, and got the current path for solve the maze if it is solvable",
    btnLabel: "Solve",
    id: "maze",
    styleCont:
      "grid h-64 w-full max-w-2xl grid-cols-[repeat(5,minmax(50px,100px))] overflow-hidden rounded-xl border border-black p-1",
  },
  {
    name: "Rainbow",
    description:
      " Uses a bobblesort, for create a sorted rainbow based on the hue! ",
    btnLabel: "Sort",
    id: "rainbow",
    styleCont:
      "relative flex md:h-64 w-full rounded-xl border border-black bg-conic/decreasing from-violet-700 via-lime-300 to-violet-700 p-1 h-32",
