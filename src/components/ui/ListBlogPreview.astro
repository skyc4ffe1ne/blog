---
const { data: format_data } = Astro.props;
---

<div
  class="content-list border-foreground hidden w-full flex-1 flex-col border-l px-4 lg:flex"
>
  <header>
    <h3 class="text-sm font-semibold tracking-wide uppercase">Posts</h3>

    <h3 id="title-preview" class="pt-6 text-3xl font-semibold">
      How i understood and learned git
    </h3>
    <div class="flex items-center pt-3">
      {
        Array.from({ length: 4 }, (_) => (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="fill-foreground stroke-background size-4"
          >
            <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z" />
          </svg>
        ))
      }

      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="size-4 fill-gray-300 stroke-transparent dark:fill-gray-700"
      >
        <path
          d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"
        ></path>
      </svg>
    </div>
  </header>

  <div class="border-foreground mt-auto border">
    <div class="bg-foreground h-4 w-full"></div>
    <h2 class="text-center text-4xl tracking-tighter" id="content-title">
      {format_data[0].title}
    </h2>

    <div class="flex h-36 justify-center">
      <img
        src={format_data[0].image.url}
        alt={format_data[0].image.alt}
        class="h-full w-auto"
        id="content-image"
      />
    </div>
  </div>
</div>
