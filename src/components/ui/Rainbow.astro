<section class="mt-10 flex justify-center gap-4 px-4">
  <div class="min-w-2xl">
    <h2 class="text-6xl text-pretty">Rainbow</h2>
    <div
      class="relative flex h-64 w-full max-w-2xl overflow-hidden rounded-xl border border-black bg-conic/decreasing from-violet-700 via-lime-300 to-violet-700 p-1"
      id="rainbow"
    >
    </div>
  </div>

  <div class="mt-20">
    <p class="mb-4 max-w-96 text-xl">
