---
const { project } = Astro.props;
import { Icon } from "astro-icon/components";
---

<h3
  class="border-b text-2xl font-medium tracking-tight text-nowrap md:text-6xl"
>
  {project.title}
</h3>
<div class="flex flex-col md:flex-row">
  <div class="order-2 pt-3 md:order-1 md:border-r lg:w-xl lg:pt-4">
    <p class="text-2xl/7 tracking-tight text-pretty md:max-w-80 lg:max-w-2xl">
      {project.description}
    </p>

    <button class="mt-4 flex items-center py-2 pr-4">
      {
        project.stack.map((st, idx) => (
          <div
            class={`flex items-center gap-1 pr-4 ${idx + 1 === project.stack.length ? "border-r border-gray-700" : ""}`}
          >
            <Icon name={st.iconName} class="size-4" />
            <span class="text-foreground text-base">{st.labelName}</span>
          </div>
        ))
      }

      <a
        href={project.link}
        class="text-accent flex items-center gap-2 pl-4"
        target="_blank"
      >
        See it live
        <Icon name="arrow_link-icon" />
      </a>
    </button>
  </div>
  <div
    class="order-1 grid grid-cols-1 pt-4 md:grid-cols-[repeat(2,_minmax(0,340px))] md:gap-x-4 md:pl-4 lg:w-full lg:grid-cols-[repeat(2,_minmax(200px,400px))] lg:gap-x-10 min-[70rem]:grid-cols-[repeat(3,_minmax(100px,300px))] xl:place-items-center"
  >
    <div class="rounded-lg border border-gray-200 dark:border-gray-800">
      <img
        src={project.primaryImg}
        alt={project.altPrimaryImg}
        class="rounded-lg"
      />
    </div>

    <div class="rounded-lg border border-gray-200 dark:border-gray-800">
      <img
        src={project.secondaryImg}
        alt={project.altSecondaryImg}
        class="hidden rounded-lg md:block"
      />
    </div>
    <div class="rounded-lg border border-gray-200 dark:border-gray-800">
      <img
        src={project.tertiaryImg}
        alt={project.altTertiaryImg}
        class="hidden rounded-lg min-[70rem]:block"
      />
    </div>
  </div>
</div>
