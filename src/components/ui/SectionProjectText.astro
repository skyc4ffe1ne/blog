---
const { project } = Astro.props;
import { Icon } from "astro-icon/components";
---

<div class="md:w-xs lg:w-sm">
  <h3 class="text-2xl font-medium tracking-tight text-nowrap md:text-4xl">
    {project.title}
  </h3>
  <div class="flex gap-4 pt-1">
    {
      project.stack.map((st) => (
        <div class="flex items-center gap-2">
          <Icon name={st.iconName} class="size-4" />
          <span class=""> {st.labelName} </span>
        </div>
      ))
    }
  </div>
  <p
    class="text-ghost pt-2 pb-4 text-base/5 tracking-tight text-pretty md:pt-5 md:pb-8 md:text-xl/6"
  >
    {project.description}
  </p>

  <a
    href={project.link}
    class="text-accent flex items-center gap-2"
    target="_blank"
  >
    See it live
    <Icon name="arrow_link-icon" />
  </a>
</div>
